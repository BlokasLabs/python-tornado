 class _ResolverErrorTestMixin(object):
+    @unittest.skip("Prevent internet access during build")
     def test_bad_host(self):
         def handler(exc_typ, exc_val, exc_tb):
             self.stop(exc_val)
@@ -65,6 +66,7 @@
         self.assertIsInstance(result, Exception)
 
